#include <bits/stdc++.h>
#include <vector>
#include <algorithm>
#include <iostream>
#include <string>
#include <math.h>
#include <set>
#include <map>
typedef long long ll;
typedef long double ld;
 
using namespace std;
 
int main(){
    ios_base::sync_with_stdio(0); cin.tie(0);
    ll n;
    cin>>n;
    ll minEle=2e9;
    ll diff;
    for(int i{0};i<n;i++){
        ll ele;
        cin>>ele;
        diff=abs(0-ele);
        minEle=min(diff,minEle);
    }
    cout<<minEle<<"\n";
return 0;
}
