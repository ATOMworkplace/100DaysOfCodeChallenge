#include <iostream>
#include <vector>
 
using namespace std;
 
 
 
int main() {
    int n;
    cin>>n;
    int a,b;
    int count{0};
    for(int i{1};i<n;i++){
        a=i;
        b=n-i;
        if(a%2==0 && b%2==0){
            count++;
        }
    }
    if(count>=1){
        cout<<"YES";
    }else{
        cout<<"NO";
    }
    return 0;
}
