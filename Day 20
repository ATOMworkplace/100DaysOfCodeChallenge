#include <bits/stdc++.h>
#include <vector>
#include <algorithm>
#include <iostream>
#include <string>
#include <math.h>
#include <set>
#include <map>
#define ll long long
 
using namespace std;
 
int main(){
    ios_base::sync_with_stdio(0); cin.tie(0);
    ll a;
    cin>>a;
    vector<ll>arr;
    ll count=1;
    ll ans=1;
    for(int i=0;i<a;i++){
        ll ele;
        cin>>ele;
        arr.push_back(ele);
    }
 
    for(int i=1;i<a;i++){
        if(arr[i]>arr[i-1]){
            count++;
        }else{
            count=1;
        }
        ans=max(count,ans);
    }
    cout<<ans<<endl;
return 0;
}
