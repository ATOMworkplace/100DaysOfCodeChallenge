#include <iostream>
 
using namespace std;
 
int main(){
    int m;
    cin>>m;
    for(int i{0};i<m;i++){
        long long int n;
        cin>>n;
        long long int sum{0};
        while(n>1){
            sum+=n;
            if(n%2==0){
                n=n;
            }else{
                n=n-1;
            }
            n=n/2;
            //cout<<"n : "<<n<<endl;
        }
        cout<<sum+1<<endl;
    }
    
 
return 0;
}
